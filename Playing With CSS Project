//main.css - Connor Gillmor - 02-01-2017

body
{
    background-color: whitesmoke;
    background-image: url("http://www.clipartlord.com/wp-content/uploads/2015/11/banana20.png");
}
#header
{
    text-decoration: underline;
    font-variant: small-caps;
    font-size: 75px;
    font-family: "Times New Roman";
    text-shadow: 2px 3px orange;
    text-align: center;
    
}
#para1
{
    text-align: left;
    font-size: 40px;
    color: blue;
    text-shadow: 2px 2px white;
    border-style: solid;
    border-width: 2px 10px 4px 20px;
    border-color: red;
}
table, th, td
{
    border-collapse: collapse;
    border: 2px double black;
    font-size: 40px;
    color: blue;
    text-shadow: 2px 2px white;
}
